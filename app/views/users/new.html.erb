<h1>Instagram</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count,"error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model:@user, local: true)do |format| %>
  <%= format.label :name %>
  <%= format.text_field :name %>
  <%= format.label :email %>
  <%= format.text_field :email %>
  <%= format.label :password %>
  <%= format.password_field :password %>
  <%= format.label :password_confirmation %>
  <%= format.password_field :password_confirmation %>
  <%= format.submit "アカウントをお持ちでないですか？登録する" %>
<% end %>
