<h1>Posts</h1>
<table>

  <thead>
    <tr>
      <th>投稿一覧</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.content %></td>
        <td><%= image_tag picture.image.url %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture.id) %></td>
        <td><%= link_to 'Delete', picture_path(picture.id), method: :delete, data: {confirm: 'Are You Sure ?'} %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Post', new_picture_path %>
