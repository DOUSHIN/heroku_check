<h1>Posts</h1>
<table class="container">

  <thead>
    <tr>
      <th>投稿一覧</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr class="row">
        <td class="col-md-3"><%= picture.user.name %></td>
        <td class="col-md-3"><%= picture.content %></td>
        <td class="col-md-3"><%= image_tag picture.image.url %></td>
        <td class="col-md-3"><%= link_to 'Show', picture %></td>
        <% if picture.user_id == current_user.id %>
          <td class="col-md-0.5"><%= link_to 'Edit', edit_picture_path(picture.id) %></td>
          <td class="col-md-0.5"><%= link_to 'Delete', picture_path(picture.id), method: :delete, data: {confirm: 'Are You Sure ?'} %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Post', new_picture_path %>
